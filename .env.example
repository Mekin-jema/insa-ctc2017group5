# BetterAuth - set your secret key here (keep it secure)
BETTER_AUTH_SECRET="your_better_auth_secret_here"

# Backend URL for authentication server
BETTER_AUTH_URL="http://localhost:3000"

# Public API URL (usually same as backend URL)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Database connection string
# Format: postgresql://username:password@host:port/database?sslmode=required&channel_binding=require
DATABASE_URL="postgresql://your_db_user:your_db_password@your_db_host:5432/your_database_name?sslmode=require&channel_binding=require"

# GitHub OAuth credentials
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Cloudinary configuration
NEXT_PUBLIC_CLOUDINARY_UPLOAD_URL="https://api.cloudinary.com/v1_1/your_cloud_name/image/upload"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your_upload_preset_name"
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# Node environment: development or production
NODE_ENV=development

# Email credentials for sending mails (use real credentials for production)
EMAIL_USER="your_email@example.com"
EMAIL_PASS="your_email_app_specific_password"

# Analytics key (e.g., PostHog)
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_project_key"

# Google OAuth credentials
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
